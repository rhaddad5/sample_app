<li id="micropost-<%= micropost.id %>">
  <%= cl_image_tag micropost.user.photo.key, class: "avatar-large" %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %>
    <%= cl_image_tag micropost.image.key, width: 500, height: 500, crop: :limit if micropost.image.attached? %>
  </span>
  <span class="timestamp">Posted <%= time_ago_in_words(micropost.created_at) %> ago.</span>
  <% if current_user?(micropost.user) %>
    <%= link_to "Delete", micropost_path(micropost), method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
</li>
