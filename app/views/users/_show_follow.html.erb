<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user-info">
      <%= cl_image_tag @user.photo.key, class: "avatar-large" %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "View my profile", user_path(@user) %></span>
      <span><b>Microposts: </b><%= @user.microposts.count %></span>
    </section>
    <section class="stats">
      <%= render "shared/stats" %>
      <% if @users.any? %>
        <div class="user-avatars">
          <% @users.each do |user| %>
            <% if user.photo.attached? %>
              <%= cl_image_tag user.photo.key, class: "avatar-large" %>
            <% else %>
              <%= image_tag "user.png", class: "avatar-large" %>
            <% end %>
            <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users-follow">
        <%= render @users %>
      </ul>
      <%= will_paginate(@users, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
    <% end %>
  </div>
</div>
